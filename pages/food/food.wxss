/* pages/food/food.wxss */
page {
    font-size: 14px;
    color: #777;
}
.food-item {
    margin: 0 20rpx;
    padding: 30rpx 0;
    display: flex;
}
.food-item image {
    /*固定左边图片大小，flex-shrink大小设置为0时当空间不足时不缩小*/
    flex: 0 0 120rpx;
    height: 120rpx;
}
.info {
    padding-left: 20rpx;
    flex: auto;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}
.tit {
    font-size: 15px;
    font-weight: bold;
}
.info .tel,
.info .addr {
    font-size: 13px;
    margin-top: 5rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.score {
    display: flex;
    justify-content: space-between;
}
.distance {
    font-size: 12px;
}
.star-pos {
    display: flex;
    margin: 10rpx 0;
}
.star {
    background:url("https://ws1.sinaimg.cn/mw1024/0072Lfvtly1g0viyll5htj301s01s0rk.jpg");
    width: 30rpx;
    height: 30rpx;
    background-size: 30rpx 30rpx;
}
.on{
    background:url("https://ws1.sinaimg.cn/mw1024/0072Lfvtly1g0viyy9qx2j301s01s0s3.jpg");
    width: 30rpx;
    height: 30rpx;
    background-size: 30rpx 30rpx;
}


