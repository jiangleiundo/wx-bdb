/* pages/message/message.wxss */
page {
    color: #777;
    font-size: 14px;
    background: #f1f1f1;
    padding: 40rpx 20rpx;
    box-sizing: border-box;
}
.card-item {
    display: flex;
    flex-direction: column;
    background: #fff;
    border: 1px solid #eee;
    border-radius: 10rpx;
    padding: 20rpx 30rpx 0 20rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}
.card-item .tit {
    font-size: 20px;
    font-weight: blod;
    color: #333;
}
.card-item .date {
    font-size: 12px;
    color: #999;
    line-height: 30px;
}
.card-item image {
    margin: 14rpx 0;
    width: 100%;
    height: 300rpx;
}
.card-item .desc {
    color: #333;
    line-height: 24px;
}
.card-item .more {
    line-height: 40px;
}


